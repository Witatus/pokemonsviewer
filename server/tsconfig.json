{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }